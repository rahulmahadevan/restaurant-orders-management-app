<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.breathetofunction.theweekendcafeorders"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/circle_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/circle_logo"
        android:supportsRtl="true"
        tools:replace="android:icon, android:theme"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.TheWeekendCafeOrders">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.TheWeekendCafeOrders.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:label="@string/welcome">
            <intent-filter>
                <action android:name="android.intent.action.Login"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuSelectionActivity"
            android:label="@string/new_order"
            android:theme="@style/Theme.TheWeekendCafeOrders">
            <intent-filter>
                <action android:name="android.intent.action.MenuSelection" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OrderSummaryActivity"
            android:label="@string/order_summary"
            android:theme="@style/Theme.TheWeekendCafeOrders">
            <intent-filter>
                <action android:name="android.intent.action.OrderSummary" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>